<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="CodingTracker.Controls.FlyoutFooter">
    <StackLayout>
        <Label Text="empty-codes"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <Label 
            FontSize="16"
            Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{0:MMMM, yyyy}'}"
            HorizontalOptions="Center" />
    </StackLayout>
</ContentView>